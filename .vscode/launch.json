    "version": "0.2.0",
    "configurations": [
        {
            "name": "DebugLocal",
            "type": "node",
            "request": "attach",
            "port": 9849,
            "address": "0.0.0.0",
            "restart": true,
            "trace": "verbose",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "./",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "sourceMapPathOverrides": {
                "./*": "${workspaceRoot}/*"
            }
        }
    ]
}
