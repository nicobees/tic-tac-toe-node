root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = off

[*.{ts, js, json, html, pug, css, scss, yaml, yml, hbs, tsx}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
indent_size = 2

[*.{sh}]
indent_style = space
indent_size = 4
